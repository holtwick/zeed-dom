{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": ".",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "examples/**/*.tsx"
  ],
  "exclude": [
    "_archive",
    "node_modules",
    "dist",
    "node_modules"
  ]
}
